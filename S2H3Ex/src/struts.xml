<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="Struts2_CRUD_DEMO" extends="struts-default" >
		
		<action name="List" class="player.action.PlayerAction" method="list">
			<result>List.jsp</result>
		</action>
		
		<action name="Update" class="player.action.PlayerAction" method="update">
			<result>List.jsp</result>
		</action>
		
		<action name="Store" class="player.action.PlayerAction" method="store">
			<result>Edit.jsp</result>
		</action>
		
		<action name="Remove" class="player.action.PlayerAction" method="remove">
			<result type="redirect">List.jsp</result>
		</action>
		
	</package>
</struts>